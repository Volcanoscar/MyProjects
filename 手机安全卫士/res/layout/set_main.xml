<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:limxing="http://schemas.android.com/apk/res/com.limxing.safe"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
     <TextView
        style="@style/setTop"
        android:layout_height="25dip"
         />
 <TextView
        style="@style/setTop"
        android:gravity="center"
        android:text="设置中心" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.limxing.safe.ui.SetItem
                android:id="@+id/set_main_si_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                limxing:desc="自动更新已开启#自动更新已关闭"
                limxing:title="是否开启自动更新" >
            </com.limxing.safe.ui.SetItem>

            <com.limxing.safe.ui.SetItem
                android:id="@+id/set_main_si_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                limxing:desc="黑名单拦截已开启#黑名单拦截已关闭"
                limxing:title="是否开启黑名单拦截" >
            </com.limxing.safe.ui.SetItem>

            <com.limxing.safe.ui.SetItem
                android:id="@+id/set_main_si_destory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                limxing:desc="自毁模式已开启#自毁模式已关闭"
                limxing:title="是否开启自毁模式" >
            </com.limxing.safe.ui.SetItem>

            <com.limxing.safe.ui.SetItem
                android:id="@+id/set_main_si_lostfind"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                limxing:desc="防盗保护已开启#防盗保护已关闭"
                limxing:title="是否开启防盗保护" >
            </com.limxing.safe.ui.SetItem>

         
        </LinearLayout>
    </ScrollView>

</LinearLayout>