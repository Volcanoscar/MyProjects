<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        style="@style/setTop"
        android:layout_height="5dip" />

    <RelativeLayout style="@style/setTop" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/image_back_selector"
            android:clickable="true"
            android:onClick="back"
            android:src="@drawable/ic_menu_forward" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="请输入解锁密码"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_task_password"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:src="@drawable/app" />

    <TextView
        android:id="@+id/tv_task_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应用名称" />

    <EditText
        android:id="@+id/et_task_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/bg_button_info_down"
        android:hint="请输入应用解锁密码"
        android:inputType="textPassword"
        android:singleLine="true" />

    <Button
        android:id="@+id/bt_task_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="进入应用" />

</LinearLayout>