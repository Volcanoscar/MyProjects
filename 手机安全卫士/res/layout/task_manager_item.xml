<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_manager_item_tv_icon"
        android:src="@drawable/list_devider" />

    <ImageView
        android:id="@+id/task_manager_item_tv_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/app" />

    <TextView
        android:id="@+id/task_manager_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/task_manager_item_tv_icon"
        android:ellipsize="end"
        android:paddingTop="5dip"
        android:singleLine="true"
        android:text="我是程序名称"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/task_manager_item_tv_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task_manager_item_tv_icon"
        android:layout_alignLeft="@+id/task_manager_item_tv_name"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:text="占用内存：1.0M"
        android:textColor="#90000000" />

    <CheckBox
        android:id="@+id/task_manager_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
         />

</RelativeLayout>