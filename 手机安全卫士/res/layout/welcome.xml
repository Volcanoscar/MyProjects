<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/splash"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <TextView
        android:id="@id/tv_flash_bottem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25.0dip"
        android:gravity="center"
        android:text="黑马·手机安全卫士"
        android:textColor="#80000000"
        android:textSize="15.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_splash_load"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView1"
        android:gravity="center"
        android:text="正在加载..."
        android:textSize="10.0sp" />

    <ProgressBar
        android:id="@id/pb_splash_download"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@id/tv_splash_load"
        android:layout_centerHorizontal="true"
        android:minWidth="100.0dip" />

    <ImageView
        android:id="@id/imageView1"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/welcome" />

</RelativeLayout>