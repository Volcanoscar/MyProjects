<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_welcome" />

    <TextView
        android:id="@+id/tv_welcome_touzila"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="touzila.com"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_welcome_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pb_welcome_load"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="正在加载..."
        android:textColor="#70000000"
        android:textSize="10sp" />

    <ProgressBar
        android:id="@+id/pb_welcome_load"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_welcome_touzila"
        android:layout_centerHorizontal="true"
        android:minWidth="200dip"
        android:visibility="invisible" />

</RelativeLayout>